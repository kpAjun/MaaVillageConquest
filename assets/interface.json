{
    // 本文件主要定义了通用 UI 的行为和显示内容
    // 可参考文档和示例添加更多您需要的功能
    // 文档：https://github.com/MaaXYZ/MaaFramework/blob/main/docs/zh_cn/3.3-ProjectInterfaceV2%E5%8D%8F%E8%AE%AE.md
    // 示例：https://github.com/MaaXYZ/MaaFramework/blob/main/sample/interface.json
    "interface_version": 2,
    "name": "MaaVillageConquest",
    "description": "《村长征战团》小助手，解放双手，轻松游戏！",
    "contact": "kpAjun@outlook.com",
    "license": "AGPL-3.0",
    "welcome": "欢迎使用MaaVC！",
    // 填写项目地址和版本号可实现自动更新功能
    "github": "https://github.com/kpAjun/MaaVillageConquest",
    "version": "1.0.0-beta-1",
    // Mirror酱为第三方分发服务，新项目默认关闭
    // 若有需要请联系 Mirror酱 开通，直接自行开启是无法使用的
    // "mirrorchyan_rid": "MaaXXX",
    // "mirrorchyan_multiplatform": true,
    "controller": [
        {
            "name": "桌面端（鼠标托管）",
            "type": "Win32",
            "win32": {
                "class_regex": ".*",
                "window_regex": "4399游戏大厅",
                "screencap": "FramePool", // 截图方式
                "mouse": "Seize", // 鼠标控制方式
                "keyboard": "Seize" // 键盘控制方式
            }
            // 截图及控制方式，请根据项目实际情况修改
            // 文档: https://github.com/MaaXYZ/MaaFramework/blob/main/docs/zh_cn/2.4-%E6%8E%A7%E5%88%B6%E6%96%B9%E5%BC%8F%E8%AF%B4%E6%98%8E.md
        }
    ],
    "resource": [
        {
            "name": "4399",
            "path": [
                "{PROJECT_DIR}/resource"
            ]
        }
    ],
    "agent": {
        "child_exec": "./python/python.exe",
        "child_args": [
            "{PROJECT_DIR}/agent/main.py"
        ]
    },
    "task": [
        {
            "name": "前期准备",
            "entry": "open_msg_start"
        },
        {
            "name": "日常领取",
            "entry": "collect_gold_start"
        },
        {
            "name": "公会贡献",
            "entry": "guild_start"
        }
    ],
    "option": {}
}